{% extends "KolomietsBlogBundle:Default:template.html.twig" %}

{% block text %}
    <div class="well">
        <div class="media">
            <div class="media-body text-center">
                <h1><b>{% trans %}No posts found{% endtrans %}!</b></h1>
            </div>
        </div>
    </div>
{% endblock %}
{% block search %}
    <div class="well">
        <h4>{% trans %}Search{% endtrans %}</h4>
        <div class="input-group">
            {{ form_start(searchPostForm) }}
            {{ form_widget(searchPostForm.text) }}
            <span class="input-group-btn">{{ form_widget(searchPostForm.submit) }}</span>
            {{ form_end(searchPostForm) }}
        </div>
    </div>
{% endblock %}
{% block category %}
    <div class="well">
        <h4>{% trans %}Categories{% endtrans %}</h4>
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-unstyled">
                    {% for category in categories %}
                        <li><a href="#">{{ category.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
