{% extends "KolomietsBlogBundle:Default:template.html.twig" %}

{% block head %}New comment{% endblock %}
{% block text %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.text) }}
        {{ form_widget(form.text, { 'attr': {'class': 'form-control', 'rows': '5'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.author) }}
        {{ form_widget(form.author, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.post, { 'attr': { 'value': post } }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.save, { 'attr': {'class': 'btn btn-default'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
